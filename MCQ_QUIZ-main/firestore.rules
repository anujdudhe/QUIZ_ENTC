rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Analytics collections - allow create and read for admin dashboard
    match /visits/{docId} {
      allow create: if true;
      allow read: if true; // Allow read for admin dashboard
      allow update, delete: if false;
    }
    
    match /quiz_events/{docId} {
      allow create: if true;
      allow read: if true; // Allow read for admin dashboard
      allow update, delete: if false;
    }
    
    match /analytics/{docId} {
      allow create: if true;
      allow read: if true; // Allow read for admin dashboard
      allow update, delete: if false;
    }
    
    // Deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
